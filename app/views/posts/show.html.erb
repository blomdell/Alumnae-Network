<%= render 'shared/header' %>
<div id="wrapper" style="position: relative; margin-top: 100px; width: 100%; text-align:center">

<p>
	<b>User: </b>
	<%= link_to @post.user.name, @post.user %>
</p>
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<hr width='30%'>
<b>Comments</b><br>
<% @post.comments.each do |comment| %>
	<%= comment.content %> <br>
<% end %>


<h2> Add a comment </h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area(:content, :cols => 25, :rows => 10) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
<%= render 'shared/footer' %>
